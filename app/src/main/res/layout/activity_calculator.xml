<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  android:id="@+id/activity_calculator"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingBottom="@dimen/activity_vertical_margin"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingTop="@dimen/activity_vertical_margin"
  tools:context="com.jasonmajors.hsilop.CalculatorActivity">

  <LinearLayout
    android:id="@+id/layout_register2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      android:layout_width="20dp"
      android:layout_height="wrap_content"
      android:text="2:"
      android:textColor="?android:attr/textColorPrimary"/>

    <TextView
      android:id="@+id/register2"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:fontFamily="monospace"
      android:text=""
      android:textAlignment="textEnd"
      android:textAppearance="@android:style/TextAppearance.Material.Large"
      android:textSize="30sp"/>
  </LinearLayout>

  <LinearLayout
    android:id="@+id/layout_register1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/layout_register2">

    <TextView
      android:layout_width="20dp"
      android:layout_height="wrap_content"
      android:text="1:"
      android:textColor="?android:attr/textColorPrimary"/>

    <TextView
      android:id="@+id/register1"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:fontFamily="monospace"
      android:text=""
      android:textAlignment="textEnd"
      android:textAppearance="@android:style/TextAppearance.Material.Large"
      android:textSize="30sp"/>
  </LinearLayout>

  <LinearLayout
    android:id="@+id/layout_registerY"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/layout_register1">

    <TextView
      android:layout_width="20dp"
      android:layout_height="wrap_content"
      android:text="Y:"
      android:textColor="?android:attr/textColorPrimary"/>

    <TextView
      android:id="@+id/registerY"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:fontFamily="monospace"
      android:text=""
      android:textAlignment="textEnd"
      android:textAppearance="@android:style/TextAppearance.Material.Large"
      android:textSize="30sp"/>
  </LinearLayout>

  <LinearLayout
    android:id="@+id/layout_registerX"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/layout_registerY">

    <TextView
      android:layout_width="20dp"
      android:layout_height="wrap_content"
      android:text="X:"
      android:textColor="?android:attr/textColorPrimary"/>

    <TextView
      android:id="@+id/registerX"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:fontFamily="monospace"
      android:text=""
      android:textAlignment="textEnd"
      android:textAppearance="@android:style/TextAppearance.Material.Large"
      android:textSize="30sp"/>
  </LinearLayout>

  <GridView
    android:id="@+id/button_grid"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_below="@+id/layout_registerX"
    android:numColumns="5"
    >
  </GridView>
</RelativeLayout>

